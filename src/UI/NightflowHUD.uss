/* ============================================================================
   Nightflow - HUD Stylesheet
   Neon wireframe aesthetic for all UI elements
   ============================================================================ */

/* ============================================================================
   Variables / Root
   ============================================================================ */
:root {
    /* Neon Colors */
    --color-cyan: #00FFFF;
    --color-magenta: #FF00FF;
    --color-orange: #FF8800;
    --color-red: #FF0000;
    --color-blue: #0066FF;
    --color-white: #FFFFFF;
    --color-yellow: #FFFF00;

    /* UI Colors - transparent to see game action behind */
    --color-bg-dark: rgba(10, 10, 15, 0.6);
    --color-bg-panel: rgba(15, 15, 25, 0.75);
    --color-border: rgba(0, 255, 255, 0.5);

    /* Text */
    --color-text-primary: #00FFFF;
    --color-text-secondary: rgba(0, 255, 255, 0.7);
    --color-text-warning: #FF8800;
    --color-text-danger: #FF0000;

    /* Spacing */
    --spacing-xs: 4px;
    --spacing-sm: 8px;
    --spacing-md: 16px;
    --spacing-lg: 24px;
    --spacing-xl: 32px;

    /* Glow effect */
    --glow-cyan: 0 0 10px rgba(0, 255, 255, 0.8);
    --glow-magenta: 0 0 10px rgba(255, 0, 255, 0.8);
    --glow-orange: 0 0 10px rgba(255, 136, 0, 0.8);
}

/* ============================================================================
   Base Styles
   ============================================================================ */
.hud-root {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    flex-direction: column;
    justify-content: space-between;
}

.hidden {
    display: none;
}

.label-small {
    font-size: 10px;
    color: var(--color-text-secondary);
    -unity-font-style: bold;
    letter-spacing: 2px;
}

/* ============================================================================
   Top Bar - Score & Multiplier
   ============================================================================ */
.top-bar {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    padding: var(--spacing-md);
    height: 80px;
}

.score-container {
    align-items: flex-start;
}

.score-value {
    font-size: 36px;
    color: var(--color-cyan);
    -unity-font-style: bold;
    text-shadow: var(--glow-cyan);
    margin-top: var(--spacing-xs);
}

.multiplier-container {
    align-items: center;
}

.multiplier-value {
    font-size: 28px;
    color: var(--color-magenta);
    -unity-font-style: bold;
    text-shadow: var(--glow-magenta);
}

.multiplier-value.flash {
    scale: 1.2 1.2;
    transition-duration: 0.1s;
}

.multiplier-bar {
    width: 100px;
    height: 4px;
    background-color: rgba(255, 0, 255, 0.2);
    border-radius: 2px;
    margin-top: var(--spacing-xs);
    overflow: hidden;
}

.multiplier-fill {
    height: 100%;
    width: 0%;
    background-color: var(--color-magenta);
    border-radius: 2px;
    transition-duration: 0.2s;
}

.distance-container {
    align-items: flex-end;
}

.distance-value {
    font-size: 20px;
    color: var(--color-text-secondary);
    margin-top: var(--spacing-xs);
}

/* ============================================================================
   Side Panels
   ============================================================================ */
.side-panel {
    position: absolute;
    top: 100px;
    padding: var(--spacing-md);
}

.left-panel {
    left: 0;
}

.right-panel {
    right: 0;
    align-items: flex-end;
}

/* ============================================================================
   Damage Indicator
   ============================================================================ */
.damage-indicator {
    width: 120px;
}

.damage-bar-container {
    width: 100%;
    height: 8px;
    margin-top: var(--spacing-xs);
    position: relative;
}

.damage-bar-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
}

.damage-bar-fill {
    position: absolute;
    height: 100%;
    width: 0%;
    background-color: var(--color-cyan);
    border-radius: 4px;
    transition-duration: 0.3s;
}

.damage-bar-fill.warning {
    background-color: var(--color-orange);
}

.damage-bar-fill.critical {
    background-color: var(--color-red);
}

.damage-zones {
    flex-direction: row;
    justify-content: center;
    margin-top: var(--spacing-sm);
    width: 60px;
    height: 80px;
    align-self: center;
}

.damage-zone {
    width: 20px;
    height: 20px;
    background-color: rgba(0, 255, 255, 0.2);
    border-width: 1px;
    border-color: var(--color-cyan);
    border-radius: 2px;
    margin: 2px;
}

.damage-zone.damaged {
    background-color: rgba(255, 136, 0, 0.5);
    border-color: var(--color-orange);
}

.damage-zone.critical {
    background-color: rgba(255, 0, 0, 0.5);
    border-color: var(--color-red);
}

/* ============================================================================
   Warning Indicator
   ============================================================================ */
.warning-indicator {
    flex-direction: row;
    align-items: center;
    background-color: rgba(255, 0, 0, 0.2);
    border-width: 1px;
    border-color: var(--color-red);
    border-radius: 4px;
    padding: var(--spacing-sm);
    margin-top: var(--spacing-md);
}

.warning-icon {
    font-size: 24px;
    color: var(--color-red);
    margin-right: var(--spacing-sm);
}

.warning-text {
    font-size: 12px;
    color: var(--color-red);
    -unity-font-style: bold;
}

.warning-indicator.flash {
    background-color: rgba(255, 0, 0, 0.4);
}

/* ============================================================================
   Speedometer
   ============================================================================ */
.speedometer {
    align-items: center;
    background-color: var(--color-bg-dark);
    border-width: 2px;
    border-color: var(--color-cyan);
    border-radius: 8px;
    padding: var(--spacing-md);
    min-width: 120px;
}

.speed-value {
    font-size: 48px;
    color: var(--color-cyan);
    -unity-font-style: bold;
    text-shadow: var(--glow-cyan);
}

.speed-unit {
    font-size: 14px;
    color: var(--color-text-secondary);
    margin-top: -8px;
}

.speed-tier-indicator {
    flex-direction: row;
    margin-top: var(--spacing-sm);
}

.speedometer.boosted {
    border-color: var(--color-magenta);
}

.speedometer.boosted .speed-value {
    color: var(--color-magenta);
    text-shadow: var(--glow-magenta);
}

/* ============================================================================
   Lane Indicator
   ============================================================================ */
.lane-indicator {
    flex-direction: row;
    margin-top: var(--spacing-md);
    padding: var(--spacing-sm);
    background-color: var(--color-bg-dark);
    border-radius: 4px;
}

.lane-dot {
    width: 12px;
    height: 12px;
    background-color: rgba(0, 255, 255, 0.2);
    border-radius: 6px;
    margin: 0 4px;
}

.lane-dot.active {
    background-color: var(--color-cyan);
    box-shadow: var(--glow-cyan);
}

/* ============================================================================
   Bottom Bar - Status Indicators
   ============================================================================ */
.bottom-bar {
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: var(--spacing-md);
    height: 60px;
}

.status-indicator {
    flex-direction: row;
    align-items: center;
    background-color: var(--color-bg-dark);
    border-width: 1px;
    border-color: var(--color-cyan);
    border-radius: 4px;
    padding: var(--spacing-sm) var(--spacing-md);
    margin: 0 var(--spacing-sm);
}

.status-icon {
    font-size: 16px;
    color: var(--color-cyan);
    margin-right: var(--spacing-sm);
}

.status-text {
    font-size: 12px;
    color: var(--color-cyan);
    -unity-font-style: bold;
    letter-spacing: 1px;
}

.boost-icon {
    color: var(--color-magenta);
}

/* ============================================================================
   Notifications
   ============================================================================ */
.notification-container {
    position: absolute;
    left: 50%;
    top: 30%;
    translate: -50% 0;
    align-items: center;
}

.notification {
    background-color: var(--color-bg-panel);
    border-width: 2px;
    border-color: var(--color-cyan);
    border-radius: 8px;
    padding: var(--spacing-sm) var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    opacity: 1;
    transition-duration: 0.3s;
}

.notification.bonus {
    border-color: var(--color-yellow);
}

.notification.warning {
    border-color: var(--color-orange);
}

.notification.danger {
    border-color: var(--color-red);
}

.notification-text {
    font-size: 18px;
    color: var(--color-cyan);
    -unity-font-style: bold;
    text-shadow: var(--glow-cyan);
}

.notification-value {
    font-size: 24px;
    color: var(--color-yellow);
    -unity-font-style: bold;
    margin-left: var(--spacing-sm);
}

/* ============================================================================
   Emergency Arrows
   ============================================================================ */
.emergency-arrow {
    position: absolute;
    align-items: center;
    padding: var(--spacing-sm);
}

.emergency-arrow.left {
    left: var(--spacing-lg);
    top: 50%;
    translate: 0 -50%;
}

.emergency-arrow.right {
    right: var(--spacing-lg);
    top: 50%;
    translate: 0 -50%;
}

.emergency-arrow.behind {
    bottom: 100px;
    left: 50%;
    translate: -50% 0;
}

.arrow-icon {
    font-size: 48px;
    color: var(--color-red);
    text-shadow: var(--glow-orange);
}

.arrow-label {
    font-size: 12px;
    color: var(--color-red);
    -unity-font-style: bold;
}

.emergency-arrow.flash .arrow-icon {
    color: var(--color-blue);
}

/* ============================================================================
   Overlay & Menu Panels
   ============================================================================ */
.overlay {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    /* Transparent overlay - game action visible behind */
    background-color: rgba(0, 0, 0, 0.25);
    justify-content: center;
    align-items: center;
}

.menu-panel {
    /* Semi-transparent panel for readability while seeing game behind */
    background-color: rgba(15, 15, 25, 0.75);
    border-width: 2px;
    border-color: var(--color-cyan);
    border-radius: 12px;
    padding: var(--spacing-xl);
    min-width: 300px;
    align-items: center;
    /* Subtle glow to make panel stand out from game background */
    -unity-background-scale-mode: stretch-to-fill;
}

.menu-title {
    font-size: 36px;
    color: var(--color-cyan);
    -unity-font-style: bold;
    text-shadow: var(--glow-cyan);
    margin-bottom: var(--spacing-lg);
    letter-spacing: 4px;
}

.crash-title {
    color: var(--color-red);
    text-shadow: var(--glow-orange);
}

.menu-button {
    background-color: transparent;
    border-width: 2px;
    border-color: var(--color-cyan);
    border-radius: 4px;
    padding: var(--spacing-sm) var(--spacing-xl);
    margin: var(--spacing-xs) 0;
    min-width: 200px;
    color: var(--color-cyan);
    font-size: 16px;
    -unity-font-style: bold;
    letter-spacing: 2px;
    transition-duration: 0.15s;
}

.menu-button:hover {
    background-color: rgba(0, 255, 255, 0.2);
    scale: 1.05 1.05;
}

.menu-button:active {
    background-color: rgba(0, 255, 255, 0.4);
}

.menu-button.primary {
    background-color: rgba(0, 255, 255, 0.2);
    border-color: var(--color-cyan);
}

/* ============================================================================
   Score Summary
   ============================================================================ */
.gameover-panel {
    min-width: 400px;
    /* Transparent panel - game visible behind score summary */
    background-color: rgba(15, 15, 25, 0.7);
}

.score-summary {
    width: 100%;
    margin-bottom: var(--spacing-lg);
}

.summary-row {
    flex-direction: row;
    justify-content: space-between;
    padding: var(--spacing-xs) 0;
    border-bottom-width: 1px;
    border-bottom-color: rgba(0, 255, 255, 0.2);
}

.summary-label {
    font-size: 14px;
    color: var(--color-text-secondary);
}

.summary-value {
    font-size: 14px;
    color: var(--color-cyan);
    -unity-font-style: bold;
}

.highscore-text {
    font-size: 24px;
    color: var(--color-yellow);
    -unity-font-style: bold;
    text-shadow: 0 0 15px rgba(255, 255, 0, 0.8);
    margin-bottom: var(--spacing-md);
    letter-spacing: 2px;
}

/* ============================================================================
   Fade Overlay
   ============================================================================ */
.fade-overlay {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: black;
    opacity: 0;
    transition-duration: 0.5s;
}

.fade-overlay.active {
    opacity: 1;
}

/* ============================================================================
   Animations
   ============================================================================ */
@keyframes pulse {
    0% { opacity: 1; scale: 1 1; }
    50% { opacity: 0.7; scale: 1.1 1.1; }
    100% { opacity: 1; scale: 1 1; }
}

@keyframes flash {
    0% { opacity: 1; }
    50% { opacity: 0.3; }
    100% { opacity: 1; }
}

.pulse {
    animation: pulse 1s infinite;
}

.flash {
    animation: flash 0.5s infinite;
}

/* ============================================================================
   Game Mode Selection
   ============================================================================ */
.mode-select-panel {
    min-width: 500px;
    background-color: rgba(10, 10, 20, 0.85);
}

.mode-select-title {
    font-size: 28px;
    color: var(--color-cyan);
    -unity-font-style: bold;
    text-shadow: var(--glow-cyan);
    margin-bottom: var(--spacing-lg);
    letter-spacing: 3px;
}

.mode-grid {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: var(--spacing-lg);
}

.mode-card {
    width: 200px;
    height: 140px;
    margin: var(--spacing-sm);
    background-color: rgba(20, 20, 35, 0.9);
    border-width: 2px;
    border-color: rgba(0, 255, 255, 0.3);
    border-radius: 8px;
    padding: var(--spacing-md);
    align-items: center;
    justify-content: space-between;
    transition-duration: 0.2s;
}

.mode-card:hover {
    border-color: var(--color-cyan);
    background-color: rgba(0, 255, 255, 0.1);
    scale: 1.05 1.05;
}

.mode-card.selected {
    border-color: var(--color-magenta);
    background-color: rgba(255, 0, 255, 0.15);
}

.mode-card.nightflow {
    border-color: rgba(0, 255, 255, 0.5);
}

.mode-card.redline {
    border-color: rgba(255, 50, 50, 0.5);
}

.mode-card.redline:hover,
.mode-card.redline.selected {
    border-color: #FF3333;
    background-color: rgba(255, 50, 50, 0.15);
}

.mode-card.ghost {
    border-color: rgba(100, 200, 255, 0.5);
}

.mode-card.ghost:hover,
.mode-card.ghost.selected {
    border-color: #66CCFF;
    background-color: rgba(100, 200, 255, 0.15);
}

.mode-card.freeflow {
    border-color: rgba(100, 255, 150, 0.5);
}

.mode-card.freeflow:hover,
.mode-card.freeflow.selected {
    border-color: #66FF99;
    background-color: rgba(100, 255, 150, 0.15);
}

.mode-name {
    font-size: 18px;
    -unity-font-style: bold;
    letter-spacing: 2px;
    margin-bottom: var(--spacing-xs);
}

.mode-name.nightflow { color: var(--color-cyan); }
.mode-name.redline { color: #FF3333; }
.mode-name.ghost { color: #66CCFF; }
.mode-name.freeflow { color: #66FF99; }

.mode-description {
    font-size: 11px;
    color: var(--color-text-secondary);
    text-align: center;
    white-space: normal;
}

.mode-icon {
    font-size: 32px;
    margin-bottom: var(--spacing-sm);
}

/* Ghost Mode Seed Input */
.seed-input-container {
    flex-direction: row;
    align-items: center;
    margin-top: var(--spacing-md);
    padding: var(--spacing-sm);
    background-color: rgba(100, 200, 255, 0.1);
    border-radius: 4px;
    border-width: 1px;
    border-color: rgba(100, 200, 255, 0.3);
}

.seed-label {
    font-size: 12px;
    color: #66CCFF;
    margin-right: var(--spacing-sm);
    -unity-font-style: bold;
}

.seed-input {
    width: 120px;
    height: 24px;
    background-color: rgba(0, 0, 0, 0.5);
    border-width: 1px;
    border-color: #66CCFF;
    border-radius: 3px;
    color: var(--color-white);
    font-size: 14px;
    padding: 2px 6px;
    -unity-font-style: bold;
}

.seed-input:focus {
    border-color: var(--color-cyan);
    background-color: rgba(0, 50, 80, 0.5);
}

/* Redline Mode Stats Display */
.redline-hud {
    position: absolute;
    top: 100px;
    right: var(--spacing-lg);
    align-items: flex-end;
    padding: var(--spacing-md);
    background-color: rgba(255, 50, 50, 0.1);
    border-width: 1px;
    border-color: rgba(255, 50, 50, 0.5);
    border-radius: 8px;
}

.redline-speed {
    font-size: 48px;
    color: #FF3333;
    -unity-font-style: bold;
    text-shadow: 0 0 15px rgba(255, 50, 50, 0.8);
}

.redline-peak {
    font-size: 14px;
    color: rgba(255, 100, 100, 0.8);
    margin-top: var(--spacing-xs);
}

.redline-milestone {
    font-size: 12px;
    color: rgba(255, 150, 150, 0.6);
    margin-top: var(--spacing-xs);
}

.redline-milestone.achieved {
    color: #FFAA00;
    -unity-font-style: bold;
}

/* Mode indicator in HUD */
.mode-indicator {
    position: absolute;
    top: var(--spacing-md);
    left: 50%;
    translate: -50% 0;
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: 4px;
    border-width: 1px;
}

.mode-indicator.nightflow {
    background-color: rgba(0, 255, 255, 0.1);
    border-color: rgba(0, 255, 255, 0.3);
}

.mode-indicator.redline {
    background-color: rgba(255, 50, 50, 0.1);
    border-color: rgba(255, 50, 50, 0.3);
}

.mode-indicator.ghost {
    background-color: rgba(100, 200, 255, 0.1);
    border-color: rgba(100, 200, 255, 0.3);
}

.mode-indicator.freeflow {
    background-color: rgba(100, 255, 150, 0.1);
    border-color: rgba(100, 255, 150, 0.3);
}

.mode-indicator-text {
    font-size: 10px;
    -unity-font-style: bold;
    letter-spacing: 2px;
}

.mode-indicator-text.nightflow { color: var(--color-cyan); }
.mode-indicator-text.redline { color: #FF3333; }
.mode-indicator-text.ghost { color: #66CCFF; }
.mode-indicator-text.freeflow { color: #66FF99; }

/* ============================================================================
   Arcade Leaderboard
   Classic arcade high score table aesthetic
   ============================================================================ */
.leaderboard-panel {
    min-width: 520px;
    background-color: rgba(5, 5, 15, 0.92);
    border-width: 3px;
    border-color: var(--color-cyan);
    border-radius: 8px;
    padding: var(--spacing-lg);
    /* CRT-style inner glow */
    -unity-background-image-tint-color: rgba(0, 255, 255, 0.02);
}

.leaderboard-header {
    align-items: center;
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-md);
    border-bottom-width: 2px;
    border-bottom-color: rgba(0, 255, 255, 0.3);
}

.leaderboard-title {
    font-size: 32px;
    color: var(--color-yellow);
    -unity-font-style: bold;
    text-shadow: 0 0 20px rgba(255, 255, 0, 0.8), 0 0 40px rgba(255, 200, 0, 0.4);
    letter-spacing: 6px;
    margin-bottom: var(--spacing-sm);
}

.leaderboard-subtitle {
    font-size: 12px;
    color: var(--color-text-secondary);
    letter-spacing: 3px;
}

/* Filter Tabs */
.leaderboard-filters {
    flex-direction: row;
    justify-content: center;
    margin-bottom: var(--spacing-md);
    padding: var(--spacing-xs);
    background-color: rgba(0, 0, 0, 0.3);
    border-radius: 4px;
}

.filter-tab {
    padding: var(--spacing-xs) var(--spacing-md);
    margin: 0 2px;
    background-color: transparent;
    border-width: 1px;
    border-color: rgba(0, 255, 255, 0.2);
    border-radius: 3px;
    color: var(--color-text-secondary);
    font-size: 10px;
    -unity-font-style: bold;
    letter-spacing: 1px;
    transition-duration: 0.15s;
}

.filter-tab:hover {
    background-color: rgba(0, 255, 255, 0.1);
    border-color: rgba(0, 255, 255, 0.5);
    color: var(--color-cyan);
}

.filter-tab.active {
    background-color: rgba(0, 255, 255, 0.2);
    border-color: var(--color-cyan);
    color: var(--color-cyan);
    text-shadow: var(--glow-cyan);
}

.filter-tab.redline.active {
    background-color: rgba(255, 50, 50, 0.2);
    border-color: #FF3333;
    color: #FF3333;
}

.filter-tab.ghost.active {
    background-color: rgba(100, 200, 255, 0.2);
    border-color: #66CCFF;
    color: #66CCFF;
}

.filter-tab.freeflow.active {
    background-color: rgba(100, 255, 150, 0.2);
    border-color: #66FF99;
    color: #66FF99;
}

/* Score Table */
.leaderboard-table {
    width: 100%;
    padding: var(--spacing-sm);
}

/* Table Header */
.leaderboard-table-header {
    flex-direction: row;
    padding: var(--spacing-xs) var(--spacing-sm);
    margin-bottom: var(--spacing-xs);
    border-bottom-width: 1px;
    border-bottom-color: rgba(0, 255, 255, 0.3);
}

.header-rank {
    width: 50px;
    font-size: 10px;
    color: var(--color-text-secondary);
    letter-spacing: 1px;
}

.header-name {
    width: 80px;
    font-size: 10px;
    color: var(--color-text-secondary);
    letter-spacing: 1px;
}

.header-score {
    flex-grow: 1;
    font-size: 10px;
    color: var(--color-text-secondary);
    letter-spacing: 1px;
    -unity-text-align: middle-right;
    padding-right: var(--spacing-md);
}

.header-stats {
    width: 100px;
    font-size: 10px;
    color: var(--color-text-secondary);
    letter-spacing: 1px;
    -unity-text-align: middle-right;
}

/* Score Entry Row */
.leaderboard-entry {
    flex-direction: row;
    align-items: center;
    padding: var(--spacing-sm);
    margin: 2px 0;
    background-color: rgba(0, 20, 30, 0.5);
    border-radius: 4px;
    border-width: 1px;
    border-color: transparent;
    transition-duration: 0.2s;
}

.leaderboard-entry:hover {
    background-color: rgba(0, 255, 255, 0.08);
    border-color: rgba(0, 255, 255, 0.3);
}

.leaderboard-entry.current-player {
    background-color: rgba(255, 0, 255, 0.1);
    border-color: rgba(255, 0, 255, 0.5);
}

.leaderboard-entry.current-player:hover {
    background-color: rgba(255, 0, 255, 0.2);
}

/* Top 3 special styling */
.leaderboard-entry.rank-1 {
    background-color: rgba(255, 215, 0, 0.1);
    border-color: rgba(255, 215, 0, 0.4);
}

.leaderboard-entry.rank-2 {
    background-color: rgba(192, 192, 192, 0.08);
    border-color: rgba(192, 192, 192, 0.3);
}

.leaderboard-entry.rank-3 {
    background-color: rgba(205, 127, 50, 0.08);
    border-color: rgba(205, 127, 50, 0.3);
}

/* Rank Number */
.entry-rank {
    width: 50px;
    font-size: 24px;
    -unity-font-style: bold;
    color: var(--color-cyan);
    -unity-text-align: middle-center;
}

.rank-1 .entry-rank {
    color: #FFD700;
    text-shadow: 0 0 15px rgba(255, 215, 0, 0.8);
    font-size: 28px;
}

.rank-2 .entry-rank {
    color: #C0C0C0;
    text-shadow: 0 0 10px rgba(192, 192, 192, 0.6);
}

.rank-3 .entry-rank {
    color: #CD7F32;
    text-shadow: 0 0 10px rgba(205, 127, 50, 0.6);
}

/* Player Initials - Arcade Style */
.entry-initials {
    width: 80px;
    font-size: 22px;
    -unity-font-style: bold;
    color: var(--color-cyan);
    letter-spacing: 4px;
    text-shadow: var(--glow-cyan);
}

.rank-1 .entry-initials {
    color: #FFD700;
    text-shadow: 0 0 15px rgba(255, 215, 0, 0.8);
}

.current-player .entry-initials {
    color: var(--color-magenta);
    text-shadow: var(--glow-magenta);
}

/* Score Display - Arcade digits */
.entry-score {
    flex-grow: 1;
    font-size: 20px;
    -unity-font-style: bold;
    color: var(--color-white);
    letter-spacing: 2px;
    -unity-text-align: middle-right;
    padding-right: var(--spacing-md);
}

.rank-1 .entry-score {
    color: #FFD700;
    font-size: 22px;
}

.current-player .entry-score {
    color: var(--color-magenta);
}

/* Stats Column */
.entry-stats {
    width: 100px;
    flex-direction: column;
    align-items: flex-end;
}

.entry-speed {
    font-size: 10px;
    color: var(--color-text-secondary);
}

.entry-distance {
    font-size: 10px;
    color: rgba(0, 255, 255, 0.5);
}

/* Mode Badge */
.entry-mode-badge {
    padding: 2px 6px;
    border-radius: 3px;
    font-size: 8px;
    -unity-font-style: bold;
    letter-spacing: 1px;
    margin-left: var(--spacing-sm);
}

.entry-mode-badge.nightflow {
    background-color: rgba(0, 255, 255, 0.2);
    color: var(--color-cyan);
}

.entry-mode-badge.redline {
    background-color: rgba(255, 50, 50, 0.2);
    color: #FF3333;
}

.entry-mode-badge.ghost {
    background-color: rgba(100, 200, 255, 0.2);
    color: #66CCFF;
}

.entry-mode-badge.freeflow {
    background-color: rgba(100, 255, 150, 0.2);
    color: #66FF99;
}

/* Empty Entry Placeholder */
.leaderboard-entry.empty {
    opacity: 0.4;
}

.leaderboard-entry.empty .entry-initials {
    color: var(--color-text-secondary);
    letter-spacing: 2px;
}

.leaderboard-entry.empty .entry-score {
    color: var(--color-text-secondary);
}

/* Initials Entry Mode (New High Score) */
.initials-entry-panel {
    align-items: center;
    padding: var(--spacing-lg);
    margin-top: var(--spacing-md);
    background-color: rgba(255, 255, 0, 0.05);
    border-width: 2px;
    border-color: var(--color-yellow);
    border-radius: 8px;
}

.initials-entry-title {
    font-size: 18px;
    color: var(--color-yellow);
    -unity-font-style: bold;
    letter-spacing: 3px;
    margin-bottom: var(--spacing-md);
    text-shadow: 0 0 15px rgba(255, 255, 0, 0.6);
}

.initials-entry-score {
    font-size: 28px;
    color: var(--color-white);
    -unity-font-style: bold;
    letter-spacing: 3px;
    margin-bottom: var(--spacing-md);
}

.initials-input-container {
    flex-direction: row;
    align-items: center;
    margin-bottom: var(--spacing-md);
}

.initial-box {
    width: 50px;
    height: 60px;
    margin: 0 var(--spacing-xs);
    background-color: rgba(0, 0, 0, 0.5);
    border-width: 2px;
    border-color: var(--color-cyan);
    border-radius: 4px;
    justify-content: center;
    align-items: center;
}

.initial-box.active {
    border-color: var(--color-yellow);
    background-color: rgba(255, 255, 0, 0.1);
}

.initial-char {
    font-size: 36px;
    -unity-font-style: bold;
    color: var(--color-cyan);
    text-shadow: var(--glow-cyan);
}

.initial-box.active .initial-char {
    color: var(--color-yellow);
    text-shadow: 0 0 15px rgba(255, 255, 0, 0.8);
}

.initials-hint {
    font-size: 11px;
    color: var(--color-text-secondary);
    letter-spacing: 1px;
}

/* Leaderboard Footer */
.leaderboard-footer {
    flex-direction: row;
    justify-content: center;
    margin-top: var(--spacing-lg);
    padding-top: var(--spacing-md);
    border-top-width: 1px;
    border-top-color: rgba(0, 255, 255, 0.2);
}

.leaderboard-button {
    background-color: transparent;
    border-width: 2px;
    border-color: var(--color-cyan);
    border-radius: 4px;
    padding: var(--spacing-sm) var(--spacing-lg);
    margin: 0 var(--spacing-sm);
    color: var(--color-cyan);
    font-size: 14px;
    -unity-font-style: bold;
    letter-spacing: 2px;
    transition-duration: 0.15s;
}

.leaderboard-button:hover {
    background-color: rgba(0, 255, 255, 0.2);
    scale: 1.05 1.05;
}

.leaderboard-button.primary {
    background-color: rgba(0, 255, 255, 0.15);
}

/* Scanline Effect (subtle) */
.leaderboard-scanlines {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(
        transparent 50%,
        rgba(0, 0, 0, 0.03) 50%
    );
    background-size: 100% 4px;
    pointer-events: none;
    opacity: 0.5;
}

/* Blinking cursor for initials entry */
@keyframes blink-cursor {
    0% { opacity: 1; }
    50% { opacity: 0; }
    100% { opacity: 1; }
}

.initial-cursor {
    width: 4px;
    height: 36px;
    background-color: var(--color-yellow);
    animation: blink-cursor 0.8s infinite;
}

/* Your Rank indicator */
.your-rank-indicator {
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-sm) var(--spacing-md);
    margin-top: var(--spacing-sm);
    background-color: rgba(255, 0, 255, 0.1);
    border-width: 1px;
    border-color: rgba(255, 0, 255, 0.4);
    border-radius: 4px;
}

.your-rank-label {
    font-size: 12px;
    color: var(--color-magenta);
    letter-spacing: 2px;
    margin-right: var(--spacing-sm);
}

.your-rank-value {
    font-size: 18px;
    color: var(--color-magenta);
    -unity-font-style: bold;
    text-shadow: var(--glow-magenta);
}
